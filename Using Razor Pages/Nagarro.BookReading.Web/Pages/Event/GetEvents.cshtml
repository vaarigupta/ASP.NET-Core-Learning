@page
@model Nagarro.BookReading.Web.Pages.Event.IndexModel
@{ ViewData["Title"] = "Index"; }
<div class="container">
    <h3 class="display-4">All Events</h3>
    <div class="row">
        @foreach (var _event in Model.EventList)
        {
            <div class="col-md-4">
                <div class="card mb-4 shadow-sm" style="width: 18rem;">
                    <img class="bd-placeholder-img card-img-top" width="100" height="225" src="https://janefriedman.com/wp-content/uploads/2016/07/book-reading-1000x750.jpg" alt="Card image cap">
                    <div class="card-body">
                        <h3 class="card-title">@_event.title</h3>

                        <h6> Event Date</h6>
                        <p class="card-text">@_event.date</p>
                        <h6> Start Time </h6>
                        <p class="card-text">@_event.startTime</p>
                        <div class="d-flex justify-content-between align-items-center">
                            <div class="btn-group">
                                <a href="@Url.Page("/Event/ViewDetails",new { id= _event.Id})" class="btn btn-sm btn-outline-secondary">View Details</a>
                            </div>
                            <small class="text-muted">Vaari Gupta</small>
                        </div>

                    </div>
                </div>
            </div>

        }
    </div>
</div>

@* asp-page="/Event/ViewDetails/" asp-route-id="@_event.Id" *@